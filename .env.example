# ==========================================
# FoodieExpress V4.0 - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your actual values
# SECURITY: Never commit .env file to version control!

# ==================== GOOGLE GEMINI AI ====================
# Required for AI chatbot functionality
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ==================== MONGODB DATABASE ====================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/foodie_db

# ==================== JWT AUTHENTICATION ====================
# Secret key for signing JWT tokens
# SECURITY: Generate a strong random string for production!
# Example: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_super_secret_jwt_key_change_this_in_production

# ==================== CORS SETTINGS ====================
# Allowed origins for CORS (comma-separated)
# Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://localhost:5000

# ==================== REDIS CONFIGURATION (V3.0/V4.0) ====================
# Enable Redis for distributed session management
REDIS_ENABLED=true

# Redis connection settings
# For Docker: use service name 'redis'
# For local: use 'localhost'
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Session TTL settings (in seconds)
SESSION_TTL=3600          # 1 hour
PENDING_ORDER_TTL=600     # 10 minutes

# ==================== FASTAPI BACKEND ====================
# FastAPI backend URL for agent communication
# For Docker: http://backend:8000
# For local: http://localhost:8000
FASTAPI_BASE_URL=http://backend:8000

# ==================== FLASK AGENT ====================
# Flask environment
FLASK_ENV=production
FLASK_PORT=5000

# ==================== DOCKER SETTINGS ====================
# These are automatically set by docker-compose
# Uncomment if running without Docker

# REDIS_HOST=localhost
# FASTAPI_BASE_URL=http://localhost:8000
